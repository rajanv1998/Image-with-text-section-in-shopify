              { "value": "center", "label": "Center"},
              { "value": "right", "label": "Right"}
           ],
           "label": "Text Alignment"
        },
		{
          "type": "textarea",
          "id": "section_heading",
          "label": "Heading"
        },
		{
          "type": "color",
          "id": "section_heading_color",
          "label": "Heading Color"
        },
		{
          "type": "textarea",
          "id": "bottom_text",
          "label": "Text"
        },
		{
          "type": "color",
          "id": "bottom_text_color",
          "label": "Text Color"
        },
        {
          "type": "text",
          "id": "button_lable",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "color",
          "id": "button_bg_color",
          "label": "Button Background Color",
          "default": "#000"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#000"
        },
        {
          "type": "color",
          "id": "button_border_color",
          "label": "Button Border Color",
          "default": "#000"
        },
		{
          "type": "color",
          "id": "hover_bg_color",
          "label": "Button Hover Color",
          "default": "#000"
        },
		{
          "type": "image_picker",
          "id": "col_img",
          "label": "Image"
        },
		{
          "type": "url",
          "id": "image_link",
          "label": "Image Link"
        }
],
"presets": [
 {
   "name": "Moms Image With Text",
   "category": "text"
 }
]
}
{% endschema %}
