    </div>
  </div>
</section>
{%endif%}
{% schema %}
  {
"name": "Moms Image With Text",
"settings": [
		{
          "type": "radio",
          "id": "redirect",
          "label": "Redirection",
          "options": [
            {
              "value": "normal",
              "label": "Image right"
            },
            {
              "value": "reverse",
              "label": "Image left"
            }
          ],
          "default": "normal"
        },
		{
          "type": "checkbox",
          "id": "enable_section",
          "label": "Enable Section",
		  "default": true
			
        },
		{
          "type": "color",
          "id": "section_bg_color",
          "label": "Section Background Color"
        },
		{
           "type": "select",
