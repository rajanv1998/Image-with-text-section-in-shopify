          <div class="section_heading">
             {% if section.settings.section_heading != blank %}
              <h2 style="color: {{ section.settings.section_heading_color }}; ">{{ section.settings.section_heading }}</h2>
              {% endif %}
          </div>
          <div class="niwt_middle_text">
          {% if section.settings.bottom_text != blank %}
              <p style="color: {{ section.settings.bottom_text_color }};">{{ section.settings.bottom_text }}</p>
           {% endif %}
          </div>
