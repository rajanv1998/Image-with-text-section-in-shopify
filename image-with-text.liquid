{% if section.settings.redirect == 'normal' %}
<section class="new_image_with_text" style="background-color: {{ section.settings.section_bg_color }};" id="main_sec{{section.id}}">
  <div class="niwt_container">
    <div class="niwt_row">
      
      <div class="niwt_col">
        <div class="niwt_content text-{{ section.settings.alignment }}">
          <div class="section_heading">
             {% if section.settings.section_heading != blank %}
              <h2 style="color: {{ section.settings.section_heading_color }}; ">{{ section.settings.section_heading }}</h2>
              {% endif %}
          </div>
          <div class="niwt_middle_text">
          {% if section.settings.bottom_text != blank %}
              <p style="color: {{ section.settings.bottom_text_color }};">{{ section.settings.bottom_text }}</p>
           {% endif %}
          </div>
          <style>
  .hover_{{forloop.index}} .niwt_button_container a:hover{
  	background-color: {{ section.settings.hover_bg_color }} !important;
  }
</style>
          {% if section.settings.button_lable != blank %}
          <div class="niwt_button_container">
              <a style="color: {{ section.settings.button_color }}; border: 2px solid {{ section.settings.button_border_color }}; background-color: {{ section.settings.button_bg_color }};" href="{{ section.settings.button_link }}">{{ section.settings.button_lable }}</a>
          </div>
          {% endif %}
        </div>
      </div>
      
      <div class="niwt_col">
        <div class="niwt_img">
        	{% if section.settings.col_img != blank %}
          		<a href="{{ section.settings.image_link }}">
                <div class="niwt_img_box">
                    <img src="{{ section.settings.col_img | img_url: 'master' }}" alt="">
                </div>
          		</a>
              {% endif %}
        </div>
      </div>
      
    </div>
  </div>
</section>

{% elsif section.settings.redirect == 'reverse' %}
